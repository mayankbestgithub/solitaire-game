<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />

    <style>
      canvas {
        display: block;
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);

        image-rendering: optimizeSpeed;
        image-rendering: -moz-crisp-edges;
        image-rendering: -webkit-optimize-contrast;
        image-rendering: -o-crisp-edges;
        image-rendering: auto;
        -ms-interpolation-mode: nearest-neighbor;
      }

      #game-container {
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        position: absolute;
      }
      .full-screen {
        width: 100%;
        height: 100%;
      }

      #full > a {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div id="game-container">
      <div id="full">
        <a onclick="fullscreen()" href="javascript:void(0);"
          >Click here for full screen</a
        >
      </div>
    </div>
  </body>
  <script>
    function fullscreen() {
      console.log("hello");

      var canvas = document.querySelector("canvas");
      if (canvas) {
        canvas.style.width = "100%";
        canvas.style.height = "100%";
      }
    }
  </script>
</html>
